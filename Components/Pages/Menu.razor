                        <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                    </svg>
                    <span>Inventario</span>
                </a>
            </li>

            <!-- Ventas -->
            <li>
                <a href="/Ventas/Index" style="text-decoration:none; color:inherit; display:flex; align-items:center; gap:10px; padding:8px 12px;">
                    <svg fill="currentColor" viewBox="0 0 20 20" width="20" height="20">
                        <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
                        <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
                    </svg>
                    <span>Ventas</span>
                </a>
            </li>

            <!-- Clientes -->
            <li>
                <a href="/Clientes/Index" style="text-decoration:none; color:inherit; display:flex; align-items:center; gap:10px; padding:8px 12px;">
                    <svg fill="currentColor" viewBox="0 0 20 20" width="20" height="20">
                        <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                    </svg>
                    <span>Clientes</span>
                </a>
            </li>

            <!-- Usuarios -->
            <li>
                <a href="/Usuarios/Index" style="text-decoration:none; color:inherit; display:flex; align-items:center; gap:10px; padding:8px 12px;">
                    <svg fill="currentColor" viewBox="0 0 20 20" width="20" height="20">
                        <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" />
                    </svg>
                    <span>Usuarios</span>
                </a>
            </li>

            <!-- Facturas -->
            <li>
                <a href="/Facturas/Index" style="text-decoration:none; color:inherit; display:flex; align-items:center; gap:10px; padding:8px 12px;">
                    <svg fill="currentColor" viewBox="0 0 20 20" width="20" height="20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z" clip-rule="evenodd" />
