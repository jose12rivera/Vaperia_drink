@page "/Inventario/Index"
@using Vaperia_drink.Models
@using Vaperia_drink.Services
@inject InventarioService inventarioService
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Gestión de Inventario</PageTitle>

<div class="container-fluid vh-100 d-flex flex-column justify-content-center p-3">
    <div class="card shadow-lg w-100 h-100">
        <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #008DD9; color: #fff;">
            <h3 class="m-0">Inventario</h3>
            <a href="/Inventario/Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle me-2"></i> Nuevo Movimiento
            </a>
        </div>

        <div class="card-body overflow-auto bg-light">
            <div class="row mb-4 align-items-end">
                <div class="col-md-6">
                    <div class="input-group">
                        <input @bind="valorBusqueda" @bind:event="oninput" class="form-control" placeholder="Buscar por producto o tipo..." />
                        <button @onclick="Buscar" class="btn btn-outline-primary" type="button">
                            <i class="bi bi-search me-2"></i> Buscar
                        </button>
                    </div>
                </div>
            </div>

            @if (listaInventarios.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Producto</th>
                            <th>Fecha</th>
                            <th>Cantidad</th>
                            <th>Tipo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var inv in listaInventarios)
                        {
                            <tr>
                                <td>@inv.Producto?.Nombre</td>
                                <td>@inv.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@inv.Cantidad</td>
                                <td>
                                    @if (inv.TipoMovimiento == "Entrada")
                                    {
                                        <span class="badge bg-success">Entrada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Salida</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/Inventario/Details/@inv.InventarioId" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/Inventario/Edit/@inv.InventarioId" class="btn btn-outline-success btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="/Inventario/Delete/@inv.InventarioId" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle me-2"></i> No se encontraron movimientos de inventario.
                </div>
            }
        </div>

        <div class="card-footer bg-light d-flex justify-content-between align-items-center">
            <p class="mb-0"><strong>Total de movimientos: @listaInventarios.Count</strong></p>
            <button type="button" class="btn btn-outline-secondary" @onclick="Volver">
                <i class="bi bi-arrow-left me-2"></i> Volver al Dashboard
            </button>
        </div>
    </div>
</div>

@code {
    private List<Inventarios> listaInventarios = new();
    private string valorBusqueda = "";

    protected override async Task OnInitializedAsync()
    {
        listaInventarios = await inventarioService.ListarInventarios();
    }

    private async Task Buscar()
    {
        string busqueda = valorBusqueda?.Trim().ToLower() ?? "";

        if (string.IsNullOrWhiteSpace(busqueda))
            listaInventarios = await inventarioService.ListarInventarios();
        else
            listaInventarios = await inventarioService.Listar(i =>
                i.Producto.Nombre.ToLower().Contains(busqueda) ||
                i.TipoMovimiento.ToLower().Contains(busqueda)
            );
    }

    private void Volver()
    {
        navigationManager.NavigateTo("/Dashboard");
    }
}
