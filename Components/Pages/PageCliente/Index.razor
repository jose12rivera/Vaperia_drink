@page "/Clientes/Index"
@using Vaperia_drink.Models
@using Vaperia_drink.Services
@inject ClienteService clienteService
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Gestión de Clientes</PageTitle>

<div class="container-fluid vh-100 d-flex flex-column justify-content-center p-3">
    <div class="card shadow-lg w-100 h-100">
        <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #008DD9; color: #fff;">
            <h3 class="m-0">Clientes</h3>
            <a href="/Clientes/Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle me-2"></i> Nuevo Cliente
            </a>
        </div>

        <div class="card-body overflow-auto bg-light">
            <div class="row mb-4 align-items-end">
                <div class="col-md-6">
                    <div class="input-group">
                        <input @bind="valorBusqueda" @bind:event="oninput" class="form-control" placeholder="Buscar por teléfono o nombre..." />
                        <button @onclick="Buscar" class="btn btn-outline-primary" type="button">
                            <i class="bi bi-search me-2"></i> Buscar
                        </button>
                    </div>
                </div>
            </div>

            @if (listaClientes.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Teléfono</th>
                            <th>Nombre</th>
                            <th>Fecha Registro</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in listaClientes)
                        {
                            <tr>
                                <td>@c.ClienteId</td>
                                <td>@c.Telefono</td>
                                <td>@c.Nombre</td>
                                <td>@c.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/Clientes/Details/@c.ClienteId" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/Clientes/Edit/@c.ClienteId" class="btn btn-outline-success btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="/Clientes/Delete/@c.ClienteId" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle me-2"></i> No se encontraron clientes.
                </div>
            }
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <p class="mb-0"><strong>Total de clientes: @listaClientes.Count</strong></p>
            <button class="btn btn-outline-secondary" @onclick="Volver">
                <i class="bi bi-arrow-left me-2"></i> Volver al Dashboard
            </button>
        </div>
    </div>
</div>

@code {
    private List<Clientes> listaClientes = new();
    private string valorBusqueda = "";

    protected override async Task OnInitializedAsync() => listaClientes = await clienteService.ListarClientes();

    private async Task Buscar()
    {
        string busqueda = valorBusqueda?.Trim().ToLower() ?? "";

        if (string.IsNullOrWhiteSpace(busqueda))
            listaClientes = await clienteService.ListarClientes();
        else
            listaClientes = await clienteService.Listar(c =>
                c.Telefono.ToLower().Contains(busqueda) ||
                c.Nombre.ToLower().Contains(busqueda)
            );
    }

    private void Volver() => navigationManager.NavigateTo("/Dashboard");
}
